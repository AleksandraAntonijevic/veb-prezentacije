@page "/0403DoWhileLoopFactorialDvostruki"

<PageTitle>Factorial</PageTitle>
<h1>Double Factorial</h1>
<br/>
<table>
    <tr>
        <td>Number:</td>
        <td>
            <input style="text-align:right" @bind="number"/>
        </td>
    </tr>
    <tr>
        <td style="text-align:center" colspan="2">
            <button title="by forward counting" @onclick="CalculateDoubleFacotrial">Factorial</button> 
            
        </td>
    </tr>
    <tr>
        <td>@number !!&nbsp;</td>
        <td><input style="text-align:right" @bind="result"/></td>
    </tr>
 </table> 
<br/>

@code {

    private int number = 0;

    private long result = 2;

    private void CalculateDoubleFacotrial()
    {
        
        int n = number;
        if (n <= 0)
        {
        
            result = -1;
            return;
        }
        if(n%2 == 0)
        {
            int i = 2;
            result = 2;
            while(i <= n)
            {
                result = i;
                i += 2;
            }
        }
        else
        {
            result = 1;
            int i = 1;
            do
            {
                result *= i;
                i += 2; 
            }while(i <= n)
        }
        
}
